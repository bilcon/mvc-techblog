<section class="login-page">
  <div class="form-heading">
    <h2>Login</h2>
  </div>
  <div class="form-section">
    <form class="login-form">
      <div>
        <label for="username-login">Username</label>
        <input id="username-login" type="text" class="entry-field" />
      </div>
      <div>
        <label for="password-login">Password</label>
        <input id="password-login" type="password" class="entry-field" />
      </div>
      <div>
        <button type="submit" class="login-signup-btn">Login!</button>
      </div>
    </form>
  </div>

  <a class="sign-in-link" href="/signup">Sign up instead</a>
</section>

<script src="/javascript/login.js"></script>