<div class="container">
  <h3 class="container-header">Login</h3>
  <form id="login-form" class="container-body">
    <label class="form-label" for="username-login">Username</label>
    <input
      id="username-login"
      type="text"
      autofocus="true"
      class="entry-field"
    />

    <label class="form-label" for="password-login">Password</label>
    <input
      id="password-login"
      type="password"
      autofocus="true"
      class="entry-field"
    />

    <button type="submit" class="btn">Login!</button>
    <a href="/signup" class="login-link">Sign up instead</a>
  </form>
</div>

<script src="/javascript/login.js"></script>