<article class="post">
  <div class="container">
    <div class="container-header">
      <div class="post-name">
        <a href="/post/{{id}}" class="links">{{title}}</a>
      </div>
      <div class="created-by">
        <p id="comment-subtitle">
          Posted by
          <b>{{user.username}} </b>
          on
          <b>{{formatDate created_at}}</b>
        </p>
      </div>
    </div>
    <div class="container-body">
      <p>{{content}}</p>
    </div>
  </div>
</article>