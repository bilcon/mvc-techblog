<div class="container">
  <h3 class="container-header">Edit Post</h3>
  <form class="container-body edit-post-form">
    <label for="post-title" class="form-label">Title</label>
    <input
      name="post-title"
      type="text"
      value="{{post.title}}"
      class="entry-field"
    />
    <label class="form-label" for="content">Content</label>
    <input
      name="content"
      type="text"
      value="{{post.content}}"
      class="entry-field"
    />
    <button type="submit" class="btn">Update Post</button>
    <button type="button" class="delete-post-btn btn">Delete</button>
  </form>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>